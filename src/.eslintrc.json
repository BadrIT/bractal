{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }],
        "jsx-a11y/anchor-is-valid": [ "error", {
            "components": [ "Link" ],
            "specialLink": [ "to" ]
        }]
    },
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "import/resolver": {
            "babel-module": {
                "alias": {
                    "~": "./src"
                }
            }
        }
    }
}