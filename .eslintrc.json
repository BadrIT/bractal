{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "plugins": ["emotion"],
    "rules": {
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }],
        "no-param-reassign": 0,
        "emotion/syntax-preference": [2, "string"],
        "linebreak-style": 0,
        "global-require": 0
    },
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "import/resolver": {            
            "babel-module": {
                "extensions": [".js", ".jsx"]
            }
        }
    }
}
